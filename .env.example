# ============================================
# СтройУчёт - Environment Variables
# ============================================
# Скопируйте в .env и заполните значения
# ============================================

# Server
PORT=4000
NODE_ENV=development
BASE_URL=http://localhost:4000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/stroyuchet?schema=public"

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# File Storage
STORAGE_TYPE=local  # local или s3
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# S3 Storage (optional, если STORAGE_TYPE=s3)
# S3_ENDPOINT=https://s3.example.com
# S3_REGION=us-east-1
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_BUCKET=stroyuchet
# S3_PUBLIC_URL=https://cdn.example.com
